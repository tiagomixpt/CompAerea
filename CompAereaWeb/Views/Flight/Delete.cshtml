@model Flight

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-danger bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Flight</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<input asp-for="Id" hidden />
			<div class="p-3">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Plane" disabled class="form-control border-bottom shadow" />
					<label asp-for="Plane" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Description" disabled class="form-control border-bottom shadow" />
					<label asp-for="Description" class="ms-2"></label>
	
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Price" disabled class="form-control border-bottom shadow" />
					<label asp-for="Price" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Seats" disabled class="form-control border-bottom shadow" />
					<label asp-for="Seats" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="ImageUrl" disabled class="form-control border-bottom shadow" />
					<label asp-for="ImageUrl" class="ms-2"></label>
				
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="FlightFrom" disabled class="form-control border-bottom shadow" />
					<label asp-for="FlightFrom" class="ms-2"></label>
					
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="FlightTo" disabled class="form-control border-bottom shadow" />
					<label asp-for="FlightTo" class="ms-2"></label>
				
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger w-100">
							<i class="bi bi-check-circle"></i> Delete
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancel
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}