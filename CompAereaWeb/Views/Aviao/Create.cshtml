@model Avioes

<div class="w-100 card border-0 p-4">
	<div class="card-header bg-success bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Criar Avião</h2>
			</div>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Nome" class="form-control border-bottom shadow" />
					<label asp-for="Nome" class="ms-2"></label>
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Descricao" class="form-control border-bottom shadow" />
					<label asp-for="Descricao" class="ms-2"></label>
					<span asp-validation-for="Descricao" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Preco" class="form-control border-bottom shadow" />
					<label asp-for="Preco" class="ms-2"></label>
					<span asp-validation-for="Preco" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Classe" class="form-control border-bottom shadow" />
					<label asp-for="Classe" class="ms-2"></label>
					<span asp-validation-for="Classe" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="Passageiros" class="form-control border-bottom shadow" />
					<label asp-for="Passageiros" class="ms-2"></label>
					<span asp-validation-for="Passageiros" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="ImageUrl" class="form-control border-bottom shadow" />
					<label asp-for="ImageUrl" class="ms-2"></label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="DataPartida" class="form-control border-bottom shadow" />
					<label asp-for="DataPartida" class="ms-2"></label>
					<span asp-validation-for="DataPartida" class="text-danger"></span>
				</div>
				<div class="form-floating py-1 col-12">
					<input asp-for="DataChegada" class="form-control border-bottom shadow" />
					<label asp-for="DataChegada" class="ms-2"></label>
					<span asp-validation-for="DataChegada" class="text-danger"></span>
				</div>

				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-success w-100">
							<i class="bi bi-check-circle"></i> Criar
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i> Cancelar
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

